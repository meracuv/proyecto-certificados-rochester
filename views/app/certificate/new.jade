extends ../../layout.jade
block contenido
	div(class="col-md-6 remove-float center-block big-top-space")
		h1 Subir nueva imagen
		form(action="/app/imagenes", method="POST" enctype="multipart/form-data")
			div(class="container-fluid")
				div(class="form-group")
					label(for="title") Nombre
					input(type="text", name="title", placeholder="Nombre o Id", id="title", class="form-control")
				div(class="form-group")
					label(for="archivo") Documento
					input(type="file", name="archivo", id="archivo", class="form-control")
				div(class="row top-space")
					div(class="col-xs-12 col-sm-6")
						input(type="submit" value="Guardar" class="btn btn-primary")