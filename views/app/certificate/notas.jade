extends ../../layout.jade
block contenido
	script(type='text/javascript')
	div(class="col-md-10 remove-float center-block container-fluid")
		h1 Registrar Certificado
		form(action="/app/imagenes", method="POST" enctype="multipart/form-data" name="fr")
			div(class="container-fluid print2")
				br
				br
				div(class="col-xs-6 col-sm-6 col-md-3 col-lg-3")
					label(for="year") Año
					select(type="text", name="year", placeholder="Año", id="year", class="form-control")
						option ...
						option(value="2010-2011") 2010-2011
						option(value="2011-2012") 2011-2012
						option(value="2012-2013") 2012-2013
						option(value="2013-2014") 2013-2014
						option(value="2014-2015") 2014-2015
						option(value="2015-2016") 2015-2016
						option(value="2016-2017") 2016-2017
						option(value="2017-2018") 2017-2018
			div(class="container-fluid print2")
				div(class="col-xs-6 col-sm-6 col-md-3 col-lg-3")
					label(for="name") Nombre
					input(type="text", name="name", placeholder="Nombre", id="name", class="form-control")
				div(class="col-xs-6 col-sm-6 col-md-3 col-lg-3")
					label(for="lastname") Apellido
					input(type="text", name="lastname", placeholder="Apellido", id="lastname", class="form-control")
				div(class="col-xs-6 col-sm-6 col-md-3 col-lg-3")
					label(for="id") Id
					input(type="text", name="id", placeholder="Id", id="id", class="form-control")
				div(class="col-xs-6 col-sm-6 col-md-3 col-lg-3")
					label(for="curso") Curso
					input(type="text", name="curso", placeholder="Curso", id="curso", class="form-control")
					br
			//- Primera asignatura
			h3 Asignaturas y aprendizajes
			div(id="myList1")
				div(class="container-fluid separe tr" id="div1")
					div(class="col-xs-12 col-sm-12 col-md-4 col-lg-4")
						div(class="col-xs-6 col-sm-6 col-md-6 col-lg-6")
							label(for="asig1") Area
							input(type="text", name="asig1", placeholder="Asignatura", id="asig1", class="form-control")
					div(class="col-xs-12 col-sm-12 col-md-12 col-lg-12")
					div(id="myList2")
						div(class="col-xs-12 col-sm-12 col-md-4 col-lg-4" id="div2")
							div(class="col-xs-6 col-sm-6 col-md-6 col-lg-6")
								label(for="asignatura") Asignatura
								input(type="text", name="asignatura", placeholder="Asignatura", id="asignatura", class="form-control")
							div(class="col-xs-6 col-sm-6 col-md-6 col-lg-6")
								label(for="calificacion") Calificación
								input(type="text", name="calificacion", placeholder="calificacion", id="calificacion", class="form-control")
					button(onClick="clonadorinput()" value="mostrar mas" type="button" class="btn btn-link" style="float: right;" id="btnEnviar") Nueva asignatura
						script(type="text/javascript") function clonadorinput(){var div = document.getElementById('div2'), clone = div.cloneNode(true); clone.id = "some_id";  document.getElementById("myList2").appendChild(clone);}
					script(type="text/javascript") function activarBoton() { if(verificar()) { btnEnviar.disabled=false } else { btnEnviar.disabled=true } } function verificar() { if( asignatura.value==="" ) return false; if( calificacion.value==="" ) return false; return true; } var btnEnviar = document.getElementById("btnEnviar"); btnEnviar.disabled = true; var asignatura = document.fr.asignatura; var calificacion = document.fr.calificacion; asignatura.onkeyup = calificacion.onkeyup = activarBoton;



			div(class="container-fluid" style="margin-bottom: 35px; margin-top: 15px;")
				div(class="row top-space")
					div(class="col-xs-12 col-sm-12" align="center")
						input(type="submit" value="Guardar" class="btn btn-primary btn-lg right-space")
						button(type="button" class="btn btn-default btn-lg") Hecho