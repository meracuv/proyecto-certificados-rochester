extends ../layout.jade
block contenido
	div
		.img-container
			form(class="m-0 bg-primary" action="")
				input(id="search" class="form-control mr-2" type="text" placeholder="Buscar")
			br
			form(class="m-0" action="/app/imagenes/years" method="POST" enctype="multipart/form-data")
				.row
					.col-md-10
						select(type="text" name="year" placeholder="AÃ±o" id="year" class="form-control ")
					.col-md-2
						button(type="submit" class="btn btn-secondary ") Buscar
			#container
				for imagen in imagenes
					a(href="/app/imagenes/#{imagen.id}")
						container
							p= imagen.id_student
							h4= imagen.name+" "+imagen.lastname
	script(id="image-template" type="text/x-handlebars-template")
		.img-container
			a(href="/app/imagenes/{{id}}")
				h2 {{name}}
	script(src="/public/js/client.js")
	script(src="/public/js/search.js")
	script(src="/public/js/allyears.js")